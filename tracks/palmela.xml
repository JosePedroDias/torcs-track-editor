    <attstr name="surface" val="asphalt2-lines" />
    <section name="Track Segments">
      <section>
        <attstr name="type" val="str" />
        <attnum name="lg" unit="m" val="100.0" />
      </section>
      <section>
        <attstr name="type" val="rgt" />
        <attnum name="arc" unit="deg" val="180" />
        <attnum name="radius" unit="m" val="100" />
      </section>
      <section>
        <attstr name="type" val="str" />
        <attnum name="lg" unit="m" val="100.0" />
      </section>
      <section>
        <attstr name="type" val="rgt" />
        <attnum name="arc" unit="deg" val="180" />
        <attnum name="radius" unit="m" val="100" />
      </section>
    </section>
    <attstr name="bg-path" val="bgs/palmela.png" />
    <attnum name="bg-scale" val="0.41" />
    <attnum name="bg-pos-x" val="-176" />
    <attnum name="bg-pos-y" val="-151" />
  </section>
</params>

